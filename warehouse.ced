DeslocaString:
	  MOV dezena,centena                                                              ; Deslocamentos para formar o numero na tela
	  MOV unidade,dezena
	  MOV tecla,unidade
	  RTS R7

VoltaString:
	  MOV dezena,unidade
	  MOV centena,dezena
	  RTS R7


MultiplicaNumero:
	  MOV unidade, Numero

dez:
   CMP #0,dezena
   BEQ cem
   ADD #10,Numero
   DEC dezena
   BR dez

cem:
   CMP #0,centena
   BEQ fimConversao
   ADD #100,Numero
   DEC centena
   BR cem

fimConversao:
   RTS R7


