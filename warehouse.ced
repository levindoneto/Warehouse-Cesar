ConverteNumero:                                                                           ; Converte uma string de numeros (unidade,dezena,centena)
                                                                                          ; para um numero inteiro.
	  MOV unidade,numero
                                                                                          ; dz(int dezena) {
dz:                                                                                       ; if(dezena=0)
   CMP #0,dezena                                                                          ;   ct(centena);
   BEQ ct                                                                                 ; else {  
   ADD #10,numero                                                                         ;  numero += 10;
   DEC dezena                                                                             ;  dezena--;
   BR dz                                                                                  ;  dz(dezena);
			                                                                  ; }     
                                                                                          ;}
ct:                                                                                       ;Mesma coisa que acima, so' trocando dz por ct
   CMP #0,centena
   BEQ end
   ADD #100,numero
   DEC centena
   BR ct

end:
	  RTS R7
